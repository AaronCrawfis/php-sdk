{
  "name": "dapr/php-sdk",
  "type": "library",
  "description": "Dapr Implementation in PHP",
  "license": "MIT",
  "authors": [
    {
      "name": "Rob Landers",
      "email": "landers.robert@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-curl": "*",
    "psr/log": "^1.1",
    "nette/php-generator": "^3.5",
    "php-di/php-di": "^6.3",
    "monolog/monolog": "^2.2"
  },
  "require-dev": {
    "ext-xdebug": "*",
    "vimeo/psalm": "^4.3",
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "Dapr\\": "src/lib",
      "Dapr\\TestActors\\": "test/actors"
    },
    "files": [
      "src/bootstrap.php"
    ]
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --testdox tests --coverage-clover coverage.xml tests --whitelist src",
    "start": [
      "PHP_CLI_SERVER_WORKERS=100 dapr run --components-path components -a dev -p 9502 -- php -S 0.0.0.0:9502 -t src"
    ],
    "dapr-init": [
      "dapr init --runtime-version 1.0.0-rc.3"
    ],
    "clean": [
      "dapr uninstall",
      "docker rm -f dapr_zipkin",
      "docker rm -f dapr_redis"
    ],
    "integration-tests": [
      "sleep 10",
      "curl localhost:4902/do_tests; @composer clean"
    ],
    "lint": "./vendor/bin/psalm"
  }
}
