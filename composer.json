{
  "name": "dapr/php-sdk",
  "type": "library",
  "description": "Dapr Implementation in PHP",
  "license": "MIT",
  "authors": [
    {
      "name": "Rob Landers",
      "email": "landers.robert@gmail.com"
    }
  ],
  "require": {
    "php": "8.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "ext-xdebug": "*",
    "vimeo/psalm": "^4.3",
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "Dapr\\": "src/lib",
      "Dapr\\TestActors\\": "test/actors"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --testdox tests",
    "start": "PHP_CLI_SERVER_WORKERS=100 dapr run -i dev -p 9502 -- php -S 0.0.0.0:9502 -t src",
    "lint": "./vendor/bin/psalm"
  }
}
